{
    "manifest_version": 2,
    "name": "__MSG_appName__",
    "short_name": "__MSG_appShortName__",
    "description": "__MSG_appDescription__",
    "version": "1.0",
    "default_locale": "en",
    "permissions": [
      "activeTab",
      "tabs"
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "page_action": {
      "default_icon": {
        "16": "icons/16.png",
        "32": "icons/32.png"
      },
      "default_title": "Open on Spotify"
    },
    "icons": {
      "16": "icons/16.png",
      "32": "icons/32.png"
    }
  }
  